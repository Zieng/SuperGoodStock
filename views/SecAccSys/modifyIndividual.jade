extends layout
block stylesheet
  link(rel='stylesheet', href='/stylesheets/SecAccSys/register.css')
block content
  h1(style="text-align:center;") 修改信息
  .container
    form(action="/SecAccSys/register?MIndividual", method="post")
      table.table
        tbody
          tr
            td ID
            td #{stockID}
          tr
            td 姓名
            td
              input(type="text", name="name", value="#{name}")
          tr
            td 性别：
            td
              input(type="radio", name="sex", value="male", checked=sex == "male"?"true":"false", style="margin-left:20px")
              label 男
              input(type="radio", name="sex", value="female", checked=sex == "female"?"true":"false", style="margin-left:20px")
              label 女
          tr
            td 身份证号
            td
          tr
            td 联系电话
            td
              input(type="text", name="phone", value="#{phone}")
          tr
            td 家庭住址
            td
              input(type="text", name="addr", value="#{addr}")
          tr
            td 职业
            td
              input(type="text", name="career", value="#{career}")
          tr
            td 学历
            td
              input(type="text", name="degree", value="#{degree}")
          tr
          tr
            td 工作单位
            td
              input(type="text", name="company", value="#{company}")
          tr
            td 密码
            td
              input(type="password", name="password")
          tr
            td 确认密码
            td
              input(type="password", name="password2")
      .form-group
        input(type="submit", value="提交")