extends layout
block stylesheet
  link(rel='stylesheet', href='/stylesheets/SecAccSys/register.css')
  script(type='text/javascript', src='/javascripts/SecAccSys/switch.js')
block content
  h1 注册新账户
  .switch
    span(onclick="swit(0)")#indi 个人
    span(onclick="swit(1)")#corp 法人
  #individual.container
    form(action="/SecAccSys/register?Individual", method="post")
      table.table
        tbody
          tr
            td 姓名
            td
              input(type="text", name="name")
          tr
            td 性别：
            td
              input(type="radio", name="sex", value="male", style="margin-left:20px")
              label 男
              input(type="radio", name="sex", value="female", style="margin-left:20px")
              label 女
          tr
            td 身份证号
            td
              input(type="text", name="idno")
          tr
            td 联系电话
            td
              input(type="text", name="phone")
          tr
            td 家庭住址
            td
              input(type="text", name="addr")
          tr
            td 职业
            td
              input(type="text", name="career")
          tr
            td 学历
            td
              input(type="text", name="degree")
          tr
          tr
            td 工作单位
            td
              input(type="text", name="company")
          tr
            td 密码
            td
              input(type="password", name="password")
          tr
            td 确认密码
            td
              input(type="password", name="password2")
      .form-group
        input(type="submit", value="提交")


  #corporate.container
    form(action="/SecAccSys/register?Corporate", method="post")
      table.table
        thead 法人
        tbody
          tr
            td 法人登记号码
            td
              input(type="text", name="docid")
          tr
          tr
            td 姓名
            td
              input(type="text", name="fname")
          tr
            td 身份证号
            td
              input(type="text", name="fidno")
          tr
            td 联系电话
            td
              input(type="text", name="fphone")
          tr
            td 联系住址
            td
              input(type="text", name="faddr")
      table.table
        thead 授权交易执行人
        tbody
          tr
            td 姓名
            td
              input(type="text", name="name")
          tr
            td 身份证号
            td
              input(type="text", name="idno")
          tr
            td 联系电话
            td
              input(type="text", name="phone")
          tr
            td 联系地址
            td
              input(type="text", name="addr")
          tr
            td 密码
            td
              input(type="password", name="password")
          tr
            td 确认密码
            td
              input(type="password", name="password2")
      .form-group
        input(type="submit", value="提交")


